# ---------------------------------------------------------
# ZENTRY - ENVIRONMENT CONFIGURATION TEMPLATE
# ---------------------------------------------------------
# IMPORTANT:
# This file contains ONLY placeholder values.
# Do NOT put real secrets here.
# Copy this file to `.env` and fill in your real values.
# ---------------------------------------------------------


# Encryption key used for AES-256-CBC.
# Must be a strong secret (32+ characters recommended).
ENCRYPTION_MASTER_KEY=your_encryption_key_here


# The name of the root user/directory shown in the UI.
ROOT_USER=root


# Path where encrypted files will be stored
# (relative to project root).
ROOT_DIR=./root


# Path to store the bcrypt-hashed password
PASSWORD_FILE_PATH=./config/.bcrypt


# Application Environment: development | production
APP_ENV=development
